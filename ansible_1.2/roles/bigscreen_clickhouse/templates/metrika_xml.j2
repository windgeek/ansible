<yandex>
    <clickhouse_remote_servers>
        # 本地ck地址
        <ndc_distribute>
            {% for i in range(196,198,1) %}
                    <shard>
		    			<internal_replication>true</internal_replication>
                        <replica>
                            <host>10.4.73.{{i}}</host>
                            <port>{{shard_port}}</port>
                        </replica>
                    </shard>
            {% endfor %}
	    </ndc_distribute>

        <ndc_tse_ys_big_w>
            {% for i in range(198,272,1) %}
                    <shard>
		    			<internal_replication>true</internal_replication>
                        <replica>
                            <host>10.4.73.{{i}}</host>
                            <port>{{shard_port}}</port>
                        </replica>
                    </shard>
            {% endfor %}
	    </ndc_tse_ys_big_w>
    </clickhouse_remote_servers>

<!-- 数据压缩算法  -->
    <clickhouse_compression>
        <case>
                <min_part_size>10000000000</min_part_size>
                <min_part_size_ratio>0.01</min_part_size_ratio>
                <method>lz4</method>
        </case>
    </clickhouse_compression>

    <networks>
        <ip>::/0</ip>
    </networks>


</yandex>
